<h2>Create your new activity</h2>
<%= form_for(@activity, url: owner_activity_path) do |f| %>
  <ul>
  <li>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </li>
  <li>
  <%= f.label :description %>
  <%= f.text_field :description %>
  </li>
  <li>
  <%= f.label :category %>
  <%= f.text_field :category %>
  </li>
  <li>
  <%= f.label :address %>
  <%= f.text_field :address %>
  </li>
  <li>
  <%= f.label :city %>
  <%= f.text_field :city %>
  </li>
  <li>
  <%= f.label :period_beginning %>
  <%= f.text_field :period_beginning %>
  </li>
  <li>
  <%= f.label :period_ending %>
  <%= f.text_field :period_ending %>
  </li>
  <li>
  <%= f.label :price %>
  <%= f.text_field :price %>
  </li>
  </ul>
  <h3><%=f.submit%></h3>

<% end %>

