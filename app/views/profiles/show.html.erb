<h2 class=' title text-center'>Your personal profile</h2>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-offset-2 col-md-8">
      <div class="card-show-profile">
        <div class='show-description text-center'>
          <h3><%= @user.first_name %> <%= @user.last_name %></h3>
        </div>
        <div class= 'text-left'>
          <% if @user.owner == true %>
          <%= render 'shared/profile_owner' %>
          <% else %>
          <%= render 'shared/profile_procreator' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
